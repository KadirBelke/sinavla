<body id="LoginForm">
<div class="container">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h2>Admin Login</h2>
        <p>Please enter your email and password</p>
      </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),id:'Login') do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control", id:"inputEmail",placeholder:"Email Address" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password",class:"form-control" ,id:"inputPassword", placeholder:"Password"  %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" ,id:"inputPassword", placeholder:"Password"  %>
        </div>
        <div class="forgot">
          <a href="reset.html">Forgot password?</a>
        </div>
        <%= f.submit "Log in", class:"button"%>
        <%end %>

    </div>
    <p class="botto-text"> Designed by Sunil Rajput</p>
  </div>
</div>
</body>
