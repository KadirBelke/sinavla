<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

<%= form_for(@question) do |f| %>
  Soru:
  <%= f.text_field :question %><br>
  Dogru Cevap:
  <%= f.text_field :true_answer %><br>
  Yanlış Cevap:
  <%= f.text_field :wrong %><br>
  Yanlış Cevap:
  <%= f.text_field :wrong2 %><br>
  Yanlış Cevap:
  <%= f.text_field :wrong3 %><br>
  Yanlış Cevap:
  <%= f.text_field :wrong4 %><br>

  Sınav Türü:
  <%= f.select(:kind, TestQuestion.kinds.keys.map {|kind| [kind.titleize, kind]}) %><br>

  Zorluk:
  <%= f.select(:difficulty, TestQuestion.difficulties.keys.map {|difficulty| [difficulty.titleize, difficulty]}) %><br>

  Ders:
  <%= f.collection_select(:lesson_id, @lessons, :id, :name) %><br>

  <%= f.file_field :image %><br>

  <%= f.submit "Ekle", class:"button"%>
<% end %>
