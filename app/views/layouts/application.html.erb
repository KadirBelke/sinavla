<!DOCTYPE html>
<html>
  <head>
    <title>Sinavla</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Sinavla', home_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to 'Anasayfa', home_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Test Sorusu Ekle', new_test_question_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Klasik Soru Ekle', new_classic_question_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Soru Düzenle', questions_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Sınav Hazırla</a>
          </li>
          <li class="nav-item">
            <%= link_to 'Kullanıcı Düzenle', users_list_path, class: 'nav-link' if current_user.is_admin %>
          </li>
          <li class="nav-item">
            <%= link_to "Çıkış Yap", destroy_user_session_path,method: :delete, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
